---
import Container from "@/components/Container.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Page not found">
  <Container class="border-y mb-10">
     <div class='flex min-h-[calc(100vh-64px)] flex-col items-center justify-center border-x'>
       <h1 class='text-5xl font-bold'>404</h1>
       <p class='mt-2 text-2xl mb-6'>Page not found</p>
     
       <a href='/' class="bg-primary text-white flex items-center gap-2 py-2 px-4 text-sm rounded-md">
         <svg
           xmlns='http://www.w3.org/2000/svg'
           width='16'
           height='16'
           viewBox='0 0 24 24'
           fill='none'
           stroke='currentColor'
           stroke-width='2'
           stroke-linecap='round'
           stroke-linejoin='round'
           ><path d='M3 7v6h6'></path><path
           d='M21 17a9 9 0 0 0-9-9 9 9 0 0 0-6 2.3L3 13'></path></svg
           class='mr-2 shrink-0'
         >
         Go back home
       </a>
     </div>
  </Container>
</Layout>